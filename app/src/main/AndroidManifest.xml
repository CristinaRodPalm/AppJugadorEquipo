<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.basketball">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.activities.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".controller.activities.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".controller.activities.master_detail.PlayerListActivity"/>
        <activity

            android:name=".controller.activities.master_detail.PlayerDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".controller.activities.master_detail.TeamListActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".controller.activities.CreatePlayer"
            android:theme="@style/AppTheme"
            android:label="Crear jugador"/>
        <activity
            android:name=".controller.activities.CreateTeam"
            android:theme="@style/AppTheme"
            android:label="Crear equipo"/>

        <activity
            android:name=".controller.activities.master_detail.TeamDetailActivity"
            android:label="Team detail activity"
            android:parentActivityName=".controller.activities.master_detail.TeamDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.basketball.controller.activities.master_detail.TeamDetailActivity" />
        </activity>

    </application>

</manifest>
